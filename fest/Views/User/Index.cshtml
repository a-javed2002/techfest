@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutUser";
}
@model IEnumerable<fest.Models.User>
@using System.Security.Claims

@{
    var nameClaim = User.FindFirst(ClaimTypes.Name)?.Value;
}

<h1>Welcome, @nameClaim!</h1>
@{
    var userIdClaim = User.FindFirst("UserId")?.Value;
}

<h1>Welcome, UserId: @userIdClaim!</h1>
<a asp-action="create"><h1>Edit</h1></a>
<a asp-action="Logout"><h1>Logout</h1></a>
    <table class="table">
        <tr>
            <th>
                #
            </th>

        <th>
            Name
 
        </th>
        <th>
            email

        </th>
        <th>
            password


        </th>
        <th>
            role

        </th>
        <th>
            Image

        </th>

        <th>
            Edit
        </th>

        <th>
            Delete
        </th>
    </tr>
    @foreach(var x in Model){
    <tr>
        <td>
            @x.Id
        </td>

            <td>
                @x.UserName
            </td>
            <td>
                @x.Email

            <td>
                    @x.Passwords
            </td>
            </td>
            <td>
                @x.RoleIdfkNavigation.RoleName
            </td>

            <td>
                @x.Images
            </td>


            <td>
             <a asp-action="Edit" asp-route-id="@x.Id">Edit</a>
            </td>

            <td>
                <a asp-action="Delete" asp-controller="User" asp-route-id="@x.Id" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
            </td>

    </tr>
    }
    </table>