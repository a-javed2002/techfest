@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutUser";
}
@model IEnumerable<fest.Models.Product>

<a asp-action="create"><h1>Create</h1></a>

    <table class="table">
        <tr>
            <th>
                #
            </th>

        <th>
            Name
 
        </th>
        <th>
            Price

        </th>
        <th>
            Category


        </th>
        <th>
            Image

        </th>

        <th>
            Edit
        </th>

        <th>
            Delete
        </th>
        <th>
            Add To Cart
        </th>
    </tr>
    @foreach(var x in Model){
    <tr>
        <td>
            @x.ProductId
        </td>

            <td>
                @x.ProductName
            </td>
            <td>
                @x.Price
            </td>
            <td>
                @x.Category.CategoryName
            </td>

            <td>
                @x.ProductImage
            </td>


            <td>
             <a asp-action="edit" asp-route-id="@x.ProductId">Edit</a>
            </td>

            <td>
                <a asp-action="Delete" asp-controller="Product" asp-route-id="@x.ProductId" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
            </td>
            <td>
                <a asp-action="AddCart" asp-route-id="@x.ProductId">Add To Cart</a>
            </td>

    </tr>
    }
    </table>